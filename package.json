{
  "name": "consequences-addon-boilerplate",
  "private": true,
  "description": "A boilerplate for Consequences addons",
  "author": "Joseph Duffy",
  "version": "1.0.0",
  "preferGlobal": true,
  "main": "build/index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "tslint 'src/**/*.ts' --exclude 'src/**/*.d.ts'",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "license": "MIT",
  "repository": "git+https://github.com/JosephDuffy/consequences-addon-boilerplate",
  "keywords": [
    "consequences-addon"
  ],
  "peerDependencies": {
    "consequences": "latest"
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.33",
    "consequences": "latest",
    "jest": "^22.0.0",
    "jest-context": "^2.1.0",
    "ts-jest": "^22.0.0",
    "tslint": "^5.7.0",
    "tslint-misc-rules": "^3.1.3",
    "typescript": "^2.5.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.ts$",
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
