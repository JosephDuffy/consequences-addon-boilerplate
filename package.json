{
  "name": "consequences-addon-boilerplate",
  "private": true,
  "description": "A boilerplate for Consequences addons",
  "author": "Joseph Duffy",
  "version": "1.0.0",
  "preferGlobal": true,
  "main": "build/index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "tslint 'src/**/*.ts' --exclude 'src/**/*.d.ts'",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "license": "MIT",
  "repository": "git+https://github.com/JosephDuffy/consequences-addon-boilerplate",
  "keywords": [
    "consequences-addon"
  ],
  "peerDependencies": {
    "consequences": "latest"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.4",
    "consequences": "latest",
    "jest": "^23.4.2",
    "jest-context": "^2.1.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.7.0",
    "tslint-misc-rules": "^3.1.3",
    "typescript": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.ts$",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/*.d.ts",
      "!**/__tests__/*"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
